<html>
    <head>
        <script>
            function displayRating(slider) {
                document.getElementById("ratingValue").innerHTML = slider.value;
            }
        </script>

        <style type="text/css">
            :required, :invalid { background-color: rgb(185, 65, 9); }
            :valid { background-color: white; }
        </style>
    </head>
    <form method="post" action="thankYou.html">
        <label for="FullName">FullName:</label><br>
        <input type="text" name="FullName" id="FullName" placeholder="Enter Your Full Name" autofocus required />*<br/>

        <label for="Email">Email</label><br>
        <input type="text" name="Email" id="Email" placeholder="Enter Your Email Address" required>*<br/>

        <label for="Date Of Birth">Date of Birth</label><br>
        <input type="date" name="dateofbirth" placeholder="dateofbirth" required>*<br>

        <label for="Age">Age:</label><br>
        <input type="number" name="Age" size="6" min="21" max="61" step="1" value="21">*<br>

        <label for="Years of Experience">Years of Experience</label>*<br>
        <input type="range" name="rating" id="rating" min="0" max="100" step="1" value="0" oninput="displayRating(this)">
        <output id="ratingValue">0</output><br>

        <label for="Phone number">Phone</label>*<br>
        <input type="text" name="Phone" id="Phone" part="[0-9]{2}-[0-9]{5}-[0-9]{5}" placeholder="0000000000" required>
        <input type="submit" value="Register"><br>

        <p>Fields Marked '*' are REQUIRED</p><br>
    </form>
